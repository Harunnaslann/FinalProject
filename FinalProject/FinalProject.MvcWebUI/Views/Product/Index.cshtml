@model FinalProject.MvcWebUI.Models.ProductListViewModel


@{
    Layout = "~/Views/_Layout.cshtml";
}



<div>
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col"></th>
                <th scope="col">Product Name</th>
                <th scope="col">Unit Price</th>
                <th scope="col">Unit In Stock</th>
                <th scope="col">Add To Cart</th>
            </tr>
        </thead>
        <tbody>
            @{int counter = 0; }
            @foreach (var product in Model.Products)
            {
                counter++;
            <tr>
                <th scope="row">@counter</th>
                <td>@product.ProductName</td>
                <td>@product.UnitPrice</td>
                <td>@product.UnitInStock</td>
                <td> <a class="btn btn-xs btn-success" asp-controller="Cart" asp-action="AddToCart" asp-route-productId="@product.Id">Add To Cart</a></td>
            </tr>
            }

        </tbody>
    </table>

  


</div>

<product-list-pager 
                    
                    current-category="@Model.CurrentCategory"
                    current-page="@Model.CurrentPage"
                    page-count="@Model.PageCount"
                    page-size="@Model.PageSize">        </product-list-pager>

